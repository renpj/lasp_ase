#!/bin/bash
#PBS -N lasp_ase
#PBS -l select=1:ncpus=24:mpiprocs=24
#PBS -q queue2
#PBS -j eo
ncpu=`cat $PBS_NODEFILE | wc -l`
cd $PBS_O_WORKDIR
export ASE_LASP_COMMAND='mpirun -np '${ncpu}' lasp'

echo -n "start time  " > time; date >> time 
cp ~/lasp_result/potential/CuCHO.pot ./
~/Softwares/anaconda3/bin/python ase_lasp.py > ase.out

rm ./CuCHO.pot
echo -n "end time  " >> time ; date >> time
